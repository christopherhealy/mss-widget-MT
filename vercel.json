{
  "version": 2,

  "outputDirectory": "public",

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.eslsuccess.club/api/:path*"
    }
  ],

  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^(?!/api/).*$",
      "dest": "/index.html"
    }
  ]
}