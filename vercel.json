{
  "version": 2,
  "builds": [{ "src": "public/**", "use": "@vercel/static" }],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://mss-widget-mt.onrender.com/api/:path*"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}