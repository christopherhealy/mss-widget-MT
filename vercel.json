{
  "version": 2,

  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.eslsuccess.club/api/:path*"
    }
  ],

  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "^/(admin-login|admin-home|config-admin|admin-prompt|js|css|images)/.*",
      "dest": "/public/$1/$2"
    },
    {
      "src": "^/$",
      "dest": "/public/index.html"
    },
    {
      "src": "^(?!/api/).*$",
      "dest": "/public/index.html"
    }
  ]
}